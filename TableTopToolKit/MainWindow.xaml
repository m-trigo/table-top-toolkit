<Window x:Class="TableTopToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableTopToolKit"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Table Top Toolkit" Closed="Window_Closed"
        Width="800" MinWidth="800" Height="600" MinHeight="600" MaxWidth="1754">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml" />
    </Window.Resources>

    <DockPanel LastChildFill="True" KeyDown="OnKeyDown">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" x:Name="LoadFile" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_New Map"></MenuItem>
                <MenuItem Header="_Save"></MenuItem>
                <MenuItem Header="_Save As" x:Name="SaveAs" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_Print" x:Name="PrintMenuItemButton" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_Restore Last Session" x:Name="RestoreLastSessionButton" Click="MenuItemClick" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Switch Button Text to Icons" x:Name="IconToggleMenuItemButton"></MenuItem>
            </MenuItem>
        </Menu>

        <TabControl x:Name="tabControl" Canvas.Left="-2" Canvas.Top="-2" MinWidth="780">

            <TabItem Header="Map" Margin="0,0, -37,0">
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0"  Background="LightGray">
                            <Button x:Name="ToggleGridButton" Content="Toggle Grid" Click="ButtonClick" Margin="5" />
                            <Button x:Name="PrintPreviewButton" Content="Print Preview" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleUndoButton" Content="Undo" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleRedoButton" Content="Redo" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleDrawPencilButton" Content="Pencil Draw Tool" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleDrawLineButton" Content="Line Draw Tool" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleDrawRectangleButton" Content="Rectangle Draw Tool" Click="ButtonClick" Margin="5" />
                            <Button x:Name="ToggleClearCanvas" Content="Clear Canvas" Click="ButtonClick" Margin="5" />
                        </StackPanel>
                        <Border Grid.Row="1" CornerRadius="6" BorderBrush="Gray" BorderThickness="2" Padding="4">
                            <StackPanel Orientation="Horizontal" Height="36">
                                <Button Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image Source="./imgs/icons/statue.png" IsHitTestVisible="False" />
                                </Button>
                                <Button Click="IconListButtonClick"  BorderThickness="0" Background="Transparent">
                                    <Image Source="./imgs/icons/stairs1.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image Source="./imgs/icons/stairs2.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image Source="./imgs/icons/stairs3.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image  Source="./imgs/icons/stairs4.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image  Source="./imgs/icons/doorway1.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image  Source="./imgs/icons/doorway2.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image  Source="./imgs/icons/doorway3.png" IsHitTestVisible="False" />
                                </Button>
                                <Button  Click="IconListButtonClick" BorderThickness="0" Background="Transparent">
                                    <Image  Source="./imgs/icons/doorway4.png" IsHitTestVisible="False" />
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ListBox DockPanel.Dock="Left" BorderBrush="Gray" BorderThickness="2" Padding="4" ItemsSource="{Binding Icons}" />

                    <ScrollViewer HorizontalScrollBarVisibility="Visible"  MaxWidth="1754" MaxHeight="1240">
                        <Canvas x:Name="Canvas" Width="1754" Height="1240" Margin="10, 10, 0, 0" Background="White"
                                MouseMove="OnCanvasMouseMove" MouseUp="OnCanvasMouseUp" MouseDown="OnCanvasMouseDown"
                                MouseLeave="OnCanvasMouseLeave">
                        </Canvas>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>