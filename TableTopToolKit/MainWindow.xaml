<Window x:Class="TableTopToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableTopToolKit"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Table Top Toolkit"
        Width="800" MinWidth="800" Height="600" MinHeight="600" MaxWidth="1754">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml" />
    </Window.Resources>

    <DockPanel LastChildFill="True" KeyDown="OnKeyDown">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">

                <MenuItem Header="_Open"></MenuItem>
                <MenuItem Header="_New Map"></MenuItem>
                <MenuItem Header="_Save"></MenuItem>
                <MenuItem Header="_Save As"></MenuItem>
                <MenuItem Header="_Print" x:Name="PrintMenuItemButton" Click="MenuItemClick"></MenuItem>
            </MenuItem>
        </Menu>

        <TabControl x:Name="tabControl" Canvas.Left="-2" Canvas.Top="-2" MinWidth="780">

            <TabItem Header="Map" Margin="-1,-1,-37,0">
                <DockPanel LastChildFill="True">

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray">
                        <Button x:Name="ToggleGridButton" Content="Toggle Grid" Click="ButtonClick" Margin="5" />
                        <Button x:Name="PrintPreviewButton" Content="Print Preview" Click="ButtonClick" Margin="5" />
                    </StackPanel>

                    <ScrollViewer HorizontalScrollBarVisibility="Visible"  MaxWidth="1754" MaxHeight="1240">
                        <Canvas x:Name="Canvas" Width="1754" Height="1240"
                                    Background="White" MouseMove="OnCanvasMouseMove" MouseUp="OnCanvasMouseUp">
                        </Canvas>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
            <!--<TabItem Header="Print Preview" Margin="40,-1,-78,0">
                <Grid Background="#FFE5E5E5" Margin="0,-2,0,0" />
            </TabItem>-->
        </TabControl>
    </DockPanel>
</Window>