<Window x:Class="TableTopToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableTopToolKit"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Table Top Toolkit" Closed="Window_Closed"
        Width="800" MinWidth="800" Height="600" MinHeight="600" MaxWidth="1754"  KeyDown="OnKeyDown">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml" />
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" x:Name="LoadFile" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_New Map"></MenuItem>
                <MenuItem Header="_Save"></MenuItem>
                <MenuItem Header="_Save As" x:Name="SaveAs" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_Print" x:Name="PrintMenuItemButton" Click="MenuItemClick"></MenuItem>
                <MenuItem Header="_Restore Last Session" x:Name="RestoreLastSessionButton" Click="MenuItemClick" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Switch Button Text to Icons" x:Name="IconToggleButton" Click="MenuItemClick"></MenuItem>
            </MenuItem>
        </Menu>

        <TabControl x:Name="tabControl" Canvas.Left="-2" Canvas.Top="-2" MinWidth="780">

            <TabItem Header="Map" Margin="0,0, -37,0">
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0"  Background="LightGray">
                            <Button x:Name="ToggleGridButton" Content="Toggle Grid" Click="ButtonClick" Margin="5" ToolTip="Toggles the grid on/off &#x0a; (Crtl + G)"/>
                            <Button x:Name="PrintPreviewButton" Content="Print Preview" Click="ButtonClick" Margin="5" ToolTip="Displays a a window containing a preview of everything that will be printed &#x0a; (Crtl + P)"/>
                            <Button x:Name="ToggleClearCanvas" Content="Clear Canvas" Click="ButtonClick" Margin="5" ToolTip="Clears all items from the Canvas (this action is irreseversible) &#x0a; (Crtl + C)" />
                            <Button x:Name="ToggleUndoButton" Content="Undo" Click="ButtonClick" Margin="5"  ToolTip="Undo the most recent operation &#x0a; (Crtl + Y)"/>
                            <Button x:Name="ToggleRedoButton" Content="Redo" Click="ButtonClick" Margin="5" ToolTip="Redo the most recent operation &#x0a; (Crtl + Z)"/>
                            <Separator RenderTransformOrigin="0.5,0.5" Width="14">
                                <Separator.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Separator.RenderTransform>

                            </Separator>
                            <Button x:Name="ToggleDrawPencilButton" Click="ButtonClick" Margin="5" ToolTip="Allows free-drawing on the canvas &#x0a; (Crtl + 1)">
                                <Image Width="32" Height="32" Source="./imgs/menu_icons/pencil.png" />
                            </Button>
                            <Button x:Name="ToggleDrawLineButton" Click="ButtonClick" Margin="5" ToolTip="Allows for snap drawing. Lines will always be drawn straight on the grid lines &#x0a; (Crtl + 2)">
                                <Image Width="32" Height="32" Source="./imgs/menu_icons/line.png" />
                            </Button>
                            <Button x:Name="ToggleLineEraser" Click="ButtonClick" Margin="5" ToolTip="Erases a selected chunk of any line drawn with the rectangle or line tool &#x0a; (Crtl + 3)">
                                <Image Width="32" Height="32" Source="./imgs/menu_icons/erase.png" />
                            </Button>
                            <Button x:Name="ToggleDrawRectangleButton" Click="ButtonClick" Margin="5" ToolTip="Draws a rectangle that snaps to grid lines &#x0a; (Crtl + 4)">
                                <Image Width="32" Height="32" Source="./imgs/menu_icons/rectangle.png" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <ListBox Name="iconList" DockPanel.Dock="Left" BorderBrush="Gray" BorderThickness="2"
                             Padding="4" ItemsSource="{Binding Icons}" SelectedItem="{Binding SelectedIcon}"
                             PreviewMouseDown="OnIconListPreviewMouseDown"
                             MouseMove="OnIconListMouseMove" />

                    <ScrollViewer HorizontalScrollBarVisibility="Visible"  MaxWidth="1754" MaxHeight="1240">
                        <Canvas x:Name="Canvas" Width="1754" Height="1240" Margin="10, 10, 0, 0" Background="White"
                                MouseUp="OnCanvasMouseUp"
                                PreviewMouseMove="OnCanvasMouseMove"
                                MouseDown="OnCanvasMouseDown"
                                MouseLeave="OnCanvasMouseLeave"
                                AllowDrop="True"
                                Drop="OnIconDragDrop">
                        </Canvas>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>